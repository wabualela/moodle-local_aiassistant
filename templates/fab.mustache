{{!
    @template local_aiassistant/fab

    Floating Action Button for AI Assistant

    Example context (json):
    {
        "iconurl": "https://example.com/icon.svg"
    }
}}
<div class="local-aiassistant-fab-wrapper">
    <div class="local-aiassistant-fab" id="local-aiassistant-fab"
         role="button"
         tabindex="0"
         aria-label="{{#str}}open_assistant, local_aiassistant{{/str}}"
         aria-expanded="false"
         aria-controls="local-aiassistant-chat"
         data-action="open-chat"
         style="background-color: {{fabcolor}} !important;">
        <img src="{{iconurl}}" alt="" class="local-aiassistant-fab-icon" aria-hidden="true" />
    </div>
    <span 
        class="local-aiassistant-fab-label"
        style="background-color: {{fabcolor}} !important;">
        {{#str}}ai_labeltext, local_aiassistant{{/str}}
    </span>
</div>
